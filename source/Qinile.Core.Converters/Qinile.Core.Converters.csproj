<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Mazi Muhlari</Authors>
    <Company>M Muhlari Holdings</Company>
    <Copyright>Mazi Muhlari</Copyright>
    <PackageReleaseNotes>Performance, Bug Fixes and Features</PackageReleaseNotes>
    <PackageTags>MaziMuhlari Xamarin Framework</PackageTags>
    <Description>The definitive rapid application development framework for building Android and Apple mobile applications using Xamarin.</Description>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Summary>The definitive rapid application development framework for building Android and Apple mobile applications using Xamarin.</Summary>
    <Owners>Mazi Muhlari</Owners>
    <RepositoryUrl>https://github.com/mazimuhlari/qinile-xamarin</RepositoryUrl> 
    <RepositoryType>git</RepositoryType> 
    <PackageId>Qinile.Core.Converters</PackageId>
    <Title>Qinile.Core.Converters</Title>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <NeutralLanguage>en-ZA</NeutralLanguage>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2244" />
    <PackageReference Include="PropertyChanged.Fody" Version="3.4.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="SourceLink.Create.CommandLine" Version="2.8.3" PrivateAssets="All" />
  </ItemGroup>
</Project>
